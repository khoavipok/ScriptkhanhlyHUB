local finishFishing = Net:FindFirstChild("RE/FishingCompleted")

-- To  Farm A (c nh)
local farmPos = Vector3.new(-3728.9, -138.8, -952.8)

-- Trng th√°i toggle
local autoFishing = false

-- H√†m teleport ti A v√† gi y√™n
local function teleportToFarmA()
    local char = player.Character or player.CharacterAdded:Wait()
    local hrp = char:WaitForChild("HumanoidRootPart")

    hrp.CFrame = CFrame.new(farmPos)

    -- Gi y√™n (fly ng)
    if hrp:FindFirstChild("BV_Freeze") then
        hrp.BV_Freeze:Destroy()
    end
    local bv = Instance.new("BodyVelocity")
    bv.Name = "BV_Freeze"
    bv.Velocity = Vector3.new(0,0,0)
    bv.MaxForce = Vector3.new(9e9, 9e9, 9e9)
    bv.Parent = hrp
end

-- Toggle trong UI Rayfield
local ToggleFarmA = MainTab:CreateToggle({
   Name = "Auto Farm (Ghostfinn Rod)",
   CurrentValue = false,
   Flag = "AutoFarmA",
   Callback = function(Value)
       autoFishing = Value
       print(" Auto Farm A:", Value and "BT" or "TT")
       if Value then
           teleportToFarmA()
       else
           -- G ng y√™n nu tt
           local hrp = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
           if hrp and hrp:FindFirstChild("BV_Freeze") then
               hrp.BV_Freeze:Destroy()
           end
       end
   end,
})

-- Khi cht / respawn th√¨ TP li
player.CharacterAdded:Connect(function()
    task.wait(1)
    if autoFishing then
        teleportToFarmA()
    end
end)

-- V√≤ng lp auto c√¢u
task.spawn(function()
    while task.wait(1) do
        if autoFishing then
            teleportToFarmA()

            -- Quy tr√¨nh c√¢u c√°
            pcall(function() equipTool:FireServer(1) end)
            task.wait(0.5)

            local chargeValue = tick() * 1000
            pcall(function() chargeRod:InvokeServer(chargeValue) end)

            task.wait(2)

            local args = {
                [1] = math.random(-2, 2),
                [2] = math.random()
            }
            pcall(function() startMinigame:InvokeServer(unpack(args)) end)

            task.wait(5)

            pcall(function() finishFishing:FireServer() end)
        end
    end
end)


