local MainTab = Window:CreateTab("farmüêü", nil) -- Title, Image
    local MainSection = MainTab:CreateSection("farm")


--// Services & Remotes
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Net = ReplicatedStorage:WaitForChild("Packages"):WaitForChild("_Index"):FindFirstChild("sleitnick_net@0.2.0")
Net = Net and Net:FindFirstChild("net")

local function getRemote(name)
    local r = Net and Net:FindFirstChild(name)
    if not r then warn("‚ö†Ô∏è Missing remote:", name) end
    return r
end

local equipTool     = getRemote("RE/EquipToolFromHotbar")
local chargeRod     = getRemote("RF/ChargeFishingRod")
local startMinigame = getRemote("RF/RequestFishingMinigameStarted")
local finishFishing = getRemote("RE/FishingCompleted")

--// State
local autoFarmA = false
local autoFarmB = false
local farmingAt = "None"
local farmAPos = Vector3.new(1013.1, 1, 5079.8) -- c·ªë ƒë·ªãnh Farm A

local sharkAddedConn, sharkRemovedConn

--// Helpers
local function getHRP()
    local char = player.Character or player.CharacterAdded:Wait()
    return char:WaitForChild("HumanoidRootPart")
end

local function teleportAndFreeze(pos)
    local hrp = getHRP()
    hrp.CFrame = CFrame.new(pos)
    if hrp:FindFirstChild("BV_Freeze") then
        hrp.BV_Freeze:Destroy()
    end
    local bv = Instance.new("BodyVelocity")
    bv.Name = "BV_Freeze"
    bv.Velocity = Vector3.new(0,0,0)
    bv.MaxForce = Vector3.new(9e9,9e9,9e9)
    bv.Parent = hrp
end

local function getSharkHuntObject()
    local props = workspace:FindFirstChild("Props")
    return props and props:FindFirstChild("Shark Hunt") or nil
end

local function getSharkHuntPos()
    local obj = getSharkHuntObject()
    if not obj then return nil end
    if obj:IsA("Model") then
        return obj:GetPivot().Position
    elseif obj:IsA("BasePart") then
        return obj.Position
    else
        local pp = obj.PrimaryPart or obj:FindFirstChildWhichIsA("BasePart", true)
        return pp and pp.Position or nil
    end
end

local function startWatchingSharkHunt()
    if sharkAddedConn then sharkAddedConn:Disconnect() sharkAddedConn=nil end
    if sharkRemovedConn then sharkRemovedConn:Disconnect() sharkRemovedConn=nil end
    local props = workspace:FindFirstChild("Props")
    if not props then return end

    sharkAddedConn = props.ChildAdded:Connect(function(child)
        if child.Name == "Shark Hunt" and autoFarmB then
            local pos = getSharkHuntPos()
            if pos then
                farmingAt="B"
                teleportAndFreeze(pos)
            end
        end
    end)

    sharkRemovedConn = props.ChildRemoved:Connect(function(child)
        if child.Name=="Shark Hunt" and autoFarmB then
            if autoFarmA and farmAPos then
                farmingAt="A"
                teleportAndFreeze(farmAPos)
            else
                farmingAt="None"
            end
        end
    end)
end

local function stopWatchingSharkHunt()
    if sharkAddedConn then sharkAddedConn:Disconnect() sharkAddedConn=nil end
    if sharkRemovedConn then sharkRemovedConn:Disconnect() sharkRemovedConn=nil end
end

--// Fishing Routine
local function doFishing()
    if not (equipTool and chargeRod and startMinigame and finishFishing) then return end
    equipTool:FireServer(1)
    task.wait(0.5)
    chargeRod:InvokeServer(tick()*1000)
    task.wait(2)
    startMinigame:InvokeServer(math.random(-2,2), math.random())
    task.wait(5)
    finishFishing:FireServer()
end

--// UI Toggles
MainTab:CreateToggle({
    Name = "Auto Farm",
    CurrentValue = false,
    Flag = "FarmA",
    Callback = function(Value)
        autoFarmA=Value
        if Value and farmingAt~="B" then
            farmingAt="A"
            teleportAndFreeze(farmAPos)
        elseif not Value and farmingAt=="A" then
            farmingAt=autoFarmB and "B" or "None"
        end
    end,
})

MainTab:CreateToggle({
    Name = "Auto Event (Shark Hunt)",
    CurrentValue = false,
    Flag = "FarmB",
    Callback = function(Value)
        autoFarmB=Value
        if Value then
            startWatchingSharkHunt()
            local pos=getSharkHuntPos()
            if pos then
                farmingAt="B"
                teleportAndFreeze(pos)
            end
        else
            stopWatchingSharkHunt()
            if farmingAt=="B" then
                if autoFarmA and farmAPos then
                    farmingAt="A"
                    teleportAndFreeze(farmAPos)
                else
                    farmingAt="None"
                end
            end
        end
    end,
})

--// Respawn
player.CharacterAdded:Connect(function()
    task.wait(1)
    if farmingAt=="A" and autoFarmA then
        teleportAndFreeze(farmAPos)
    elseif farmingAt=="B" and autoFarmB then
        local pos=getSharkHuntPos()
        if pos then teleportAndFreeze(pos) end
    end
end)

--// Loop
task.spawn(function()
    while task.wait(1) do
        if farmingAt=="A" and autoFarmA then
            doFishing()
        elseif farmingAt=="B" and autoFarmB then
            if getSharkHuntPos() then
                doFishing()
            end
        end
    end
end)

