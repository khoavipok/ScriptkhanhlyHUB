BgTab:Toggle({
    Title = "Auto Event shiny card pack",
    Desc = "Auto farm pranium",
    Default = false,
    Callback = function(state)

        SafeNotify("Auto EventPlatforms", state and "‚úÖ ON" or "üõë OFF")

        _G.EventAuto = state
        if not state then return end

        local player = game.Players.LocalPlayer
        local char = player.Character or player.CharacterAdded:Wait()
        local root = char:WaitForChild("HumanoidRootPart")

        -- ‚úÖ Check Plot an to√†n (kh√¥ng g√¢y crash)
        local plotFolder = workspace:WaitForChild("Plots")
        local myPlot = plotFolder:FindFirstChild("1")

        if not myPlot then
            SafeNotify("‚ö†Ô∏è L·ªói", "Kh√¥ng t√¨m th·∫•y Plot 1!", 3)
            return
        end

        local plot = myPlot:WaitForChild("EventPlatforms")

        -- ‚úÖ To·∫° ƒë·ªô Platforms
        local platformPositions = {
            ["-4"] = Vector3.new(-221.7, 14.4, 993.8),
            ["-3"] = Vector3.new(-222.8, 14.4, 983.8),
            ["-2"] = Vector3.new(-222.4, 14.4, 974.6),
            ["-1"] = Vector3.new(-221.8, 14.4, 963.5),
        }

        local backpack = player:WaitForChild("Backpack")

        local function findTool(petName)
            for _, tool in ipairs(backpack:GetChildren()) do
                if tool:IsA("Tool") and tool.Name:find(petName) then
                    return tool
                end
            end
            return nil
        end

        task.spawn(function()
            while _G.EventAuto do
                for id, pos in pairs(platformPositions) do
                    if not _G.EventAuto then break end

                    local platform = plot:FindFirstChild(id)
                    if platform then
                        local visual = platform:FindFirstChild("VisualFolder")
                        if visual then
                            for _, pet in ipairs(visual:GetChildren()) do
                                local tool = findTool(pet.Name)
                                if tool then
                                    SafeNotify("‚ö° T√¨m Th·∫•y", tool.Name)
                                    tool.Parent = char
                                    task.wait(0.4)

                                    root.CFrame = CFrame.new(pos + Vector3.new(0, 5, 0))
                                    task.wait(0.3)

                                    -- Prompt
                                    local hitbox = platform:FindFirstChild("Hitbox")
                                    if hitbox then
                                        local prompt = hitbox:FindFirstChildOfClass("ProximityPrompt")
                                        if prompt then
                                            if fireproximityprompt then
                                                fireproximityprompt(prompt)
                                                SafeNotify("‚öôÔ∏è K√≠ch ho·∫°t", "Platform " .. id)
                                            else
                                                SafeNotify("‚ö†Ô∏è Executor l·ªói", "Kh√¥ng h·ªó tr·ª£ fireproximityprompt")
                                            end
                                        end
                                    end
                                else
                                    SafeNotify("‚ùì Thi·∫øu tool", pet.Name)
                                end
                            end
                        end
                    end
                    task.wait(1.5)
                end
            end

            SafeNotify("üõë Auto OFF", "EventPlatforms ƒë√£ t·∫Øt")
        end)
    end,
})

