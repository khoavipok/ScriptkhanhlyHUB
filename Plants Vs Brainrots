                local xpPrompt = workspace:FindFirstChild("ScriptedMap")
                    and workspace.ScriptedMap:FindFirstChild("MutationMachine")
                    and workspace.ScriptedMap.MutationMachine:FindFirstChild("UIBAR")
                    and workspace.ScriptedMap.MutationMachine.UIBAR:FindFirstChild("XPPrompt")

                if xpPrompt and xpPrompt:IsA("BindableEvent") then
                    xpPrompt:Fire()
                end
            end
        end)
    end
