        getgenv().AutoEXP = state

        if state then
            Notify("‚úÖ Auto EXP", "ƒê√£ b·∫≠t auto EXP.", 2)
        else
            Notify("‚õî Auto EXP", "ƒê√£ t·∫Øt auto EXP.", 2)
