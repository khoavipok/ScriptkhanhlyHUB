local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Remote = ReplicatedStorage.Remotes.BuyItem

-- ‚öôÔ∏è C·∫•u h√¨nh spam
local baseDelay = 0.5 -- delay gi·ªØa m·ªói l·∫ßn mua (c√≥ th·ªÉ gi·∫£m xu·ªëng 0.3 n·∫øu ·ªïn ƒë·ªãnh)

-- ‚öôÔ∏è Danh s√°ch seeds
local seeds = {
    "Mango Seed",
    "King Limone Seed",
    "Starfruit Seed",
    "Shroombino Seed",
    "Tomatrio Seed",
    "Mr Carrot Seed",
    "Carnivorous Plant Seed",
    "Cocotank Seed",
    "Watermelon Seed",
    "Eggplant Seed",
    "Dragon Frult Seed",
    "Sunflower Seed",
    "Pumpkin Seed",
    "Strawberry Seed",
    "Cactus Seed",
}

-- ‚öôÔ∏è L∆∞u tr·∫°ng th√°i toggle
local activeToggles = {}

-- ‚öôÔ∏è H√†m auto ri√™ng t·ª´ng seed (ch·∫°y song song)
local function autoBuySeed(seedName)
    task.spawn(function()
        while activeToggles[seedName] do
            pcall(function()
                Remote:FireServer(seedName)
            end)
            -- ‚è≥ Delay c√≥ th√™m random ƒë·ªÉ tr√°nh xung ƒë·ªôt server
            task.wait(baseDelay + math.random() * 0.2)
        end
    end)
end

-- ‚öôÔ∏è T·∫°o toggle cho t·ª´ng seed
for _, seedName in ipairs(seeds) do
    activeToggles[seedName] = false

    SpTab:Toggle({
        Title = seedName,
        Desc = "T·ª± ƒë·ªông mua " .. seedName,
        Default = false,
        Callback = function(state)
            activeToggles[seedName] = state

            -- Th√¥ng b√°o Roblox
            pcall(function()
                game.StarterGui:SetCore("SendNotification", {
                    Title = "Auto Buy " .. seedName,
                    Text = state and "ON ‚úÖ" or "OFF ‚ùå",
                    Duration = 2
                })
            end)

            -- N·∫øu b·∫≠t ‚Üí ch·∫°y lu·ªìng ri√™ng
            if state then
                autoBuySeed(seedName)
            end
        end
    })
end


