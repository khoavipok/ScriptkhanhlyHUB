local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local RS = game:GetService("ReplicatedStorage")

local SubmitRemote = RS.Remotes.PlantExtractor.Submit
local ClaimRemote = RS.Remotes.PlantExtractor.Claim

-- Danh s√°ch PLANT h·ª£p l·ªá
local plantNames = {
    "Mango","King Limone","Starfruit","Shroombino","Tomatrio","Mr Carrot",
    "Carnivorous Plant","Cocotank","Watermelon","Eggplant","Dragon Fruit",
    "Sunflower","Pumpkin","Strawberry","Cactus"
}

-- Lo·∫°i tr·ª´ item b·ªã hi·ªÉu nh·∫ßm l√† plant
local blacklistKeywords = {
    "seed","bottle","potion","grenade","bat","shovel","plate","launch","card",
    "gear","tool","backpack","index","fuse","brainrot","sell"
}

-- Ki·ªÉm tra 1 tool c√≥ ph·∫£i l√† plant h·ª£p l·ªá kh√¥ng
local function isPlantTool(tool)
    if not tool or not tool.Name then return false end
    local name = string.lower(tool.Name)

    -- Lo·∫°i tr·ª´ n·∫øu ch·ª©a keyword x·∫•u
    for _, bad in ipairs(blacklistKeywords) do
        if string.find(name, bad, 1, true) then
            return false
        end
    end

    -- Ki·ªÉm tra thu·ªôc danh s√°ch plant
    for _, plant in ipairs(plantNames) do
        if string.find(name, string.lower(plant), 1, true) then
            -- ph·∫£i l√† Tool c√≥ handle
            if tool:IsA("Tool") and tool:FindFirstChild("Handle") then
                return true
            end
        end
    end

    return false
end

_G.AutoHoldPlant = false

BgTab:Toggle({
    Title = "Auto XP",
    Desc = "farm xp plants",
    Default = false,
    Callback = function(state)
        _G.AutoHoldPlant = state

        if state then
            task.spawn(function()
                while _G.AutoHoldPlant do
                    local Character = LocalPlayer.Character
                    local Backpack = LocalPlayer:WaitForChild("Backpack")

                    if not Character then task.wait(0.3) continue end

                    -- Tool ƒëang c·∫ßm
                    local currentTool = Character:FindFirstChildOfClass("Tool")

                    -- N·∫øu c·∫ßm sai item -> tr·∫£ l·∫°i backpack
                    if currentTool and not isPlantTool(currentTool) then
                        currentTool.Parent = Backpack
                        currentTool = nil
                    end

                    -- N·∫øu KH√îNG c·∫ßm plant -> l·∫•y plant t·ª´ backpack l√™n
                    if not currentTool then
                        local found = false
                        for _, tool in ipairs(Backpack:GetChildren()) do
                            if isPlantTool(tool) then
                                tool.Parent = Character
                                found = true
                                break
                            end
                        end

                        -- Kh√¥ng t√¨m th·∫•y plant -> kh√¥ng submit ƒë·ªÉ tr√°nh spam
                        if not found then
                            task.wait(0.15)
                            continue
                        end
                    end

                    -- ‚úÖ L√öC N√ÄY ƒêANG C·∫¶M PLANT ‚Üí AUTO SUBMIT + CLAIM
                    if currentTool or Character:FindFirstChildOfClass("Tool") then
                        pcall(function()
                            SubmitRemote:InvokeServer()
                        end)
                        task.wait(0.3)

                        pcall(function()
                            ClaimRemote:InvokeServer()
                        end)
                        task.wait(0.3)
                    end

                    task.wait(0.12)
                end
            end)
        end
    end,
})

