-- ‚úÖ FIX: T·∫°o h√†m Notify an to√†n (kh√¥ng crash UI)
local function SafeNotify(title, text, time)
    local StarterGui = game:GetService("StarterGui")
    pcall(function()
        StarterGui:SetCore("SendNotification", {
            Title = title,
            Text = text,
            Duration = time or 1
        })
    end)
end


