-- üî∞ Confirm Loader cho Star Orbit (UI vu√¥ng + fade in/out m∆∞·ª£t)
local TweenService = game:GetService("TweenService")

local url = "https://discord.gg/raAPZrETkZ" -- üìå link copy v√†o clipboard
local scriptUrl = "https://raw.githubusercontent.com/khoavipok/ScriptkhanhlyHUB/refs/heads/main/Script%20strongest%20OP" -- üìå link script Star Orbit

-- T·∫°o ScreenGui
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Parent = game:GetService("CoreGui")
ScreenGui.Name = "ConfirmStarOrbit"

-- Frame ch√≠nh (vu√¥ng + m·ªù)
local Frame = Instance.new("Frame", ScreenGui)
Frame.Size = UDim2.new(0, 0, 0, 0) -- ban ƒë·∫ßu nh·ªè l·∫°i
Frame.Position = UDim2.new(0.5, 0, 0.5, 0)
Frame.AnchorPoint = Vector2.new(0.5, 0.5)
Frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
Frame.BackgroundTransparency = 1 -- ban ƒë·∫ßu trong su·ªët
Frame.BorderSizePixel = 0
Frame.Visible = true

-- Bo g√≥c
local UICorner = Instance.new("UICorner", Frame)
UICorner.CornerRadius = UDim.new(0, 8)

-- Ti√™u ƒë·ªÅ
local Title = Instance.new("TextLabel", Frame)
Title.Size = UDim2.new(1, -20, 0.5, -10)
Title.Position = UDim2.new(0, 10, 0, 10)
Title.BackgroundTransparency = 1
Title.Text = "Do you want to run the script khanhly?"
Title.TextColor3 = Color3.new(1,1,1)
Title.Font = Enum.Font.SourceSansBold
Title.TextScaled = true
Title.TextWrapped = true

-- N√∫t OK
local YesBtn = Instance.new("TextButton", Frame)
YesBtn.Size = UDim2.new(0.5, -15, 0.25, 0)
YesBtn.Position = UDim2.new(0, 10, 0.65, 0)
YesBtn.Text = "OK"
YesBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
YesBtn.TextColor3 = Color3.new(1,1,1)
YesBtn.Font = Enum.Font.SourceSansBold
YesBtn.TextScaled = true
local UICornerY = Instance.new("UICorner", YesBtn)
UICornerY.CornerRadius = UDim.new(0, 6)

-- N√∫t Kh√¥ng
local NoBtn = Instance.new("TextButton", Frame)
NoBtn.Size = UDim2.new(0.5, -15, 0.25, 0)
NoBtn.Position = UDim2.new(0.5, 5, 0.65, 0)
NoBtn.Text = "Kh√¥ng"
NoBtn.BackgroundColor3 = Color3.fromRGB(170, 0, 0)
NoBtn.TextColor3 = Color3.new(1,1,1)
NoBtn.Font = Enum.Font.SourceSansBold
NoBtn.TextScaled = true
local UICornerN = Instance.new("UICorner", NoBtn)
UICornerN.CornerRadius = UDim.new(0, 6)

-- üìå Tween m·ªü m∆∞·ª£t (fade in + ph√≥ng to)
TweenService:Create(Frame, TweenInfo.new(0.6, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
    BackgroundTransparency = 0.2,
    Size = UDim2.new(0, 260, 0, 130)
}):Play()

-- üìå H√†m fade out r·ªìi ·∫©n UI
local function CloseUI()
    local tween = TweenService:Create(Frame, TweenInfo.new(0.4, Enum.EasingStyle.Quad, Enum.EasingDirection.In), {
        BackgroundTransparency = 1,
        Size = UDim2.new(0, 0, 0, 0)
    })
    tween:Play()
    tween.Completed:Connect(function()
        ScreenGui:Destroy()
    end)
end

-- üìå Khi b·∫•m OK
YesBtn.MouseButton1Click:Connect(function()
    -- Copy link
    if setclipboard then
        setclipboard(url)
        print("‚úÖ ƒê√£ copy link Star Orbit v√†o clipboard")
    else
        warn("‚ö†Ô∏è Executor c·ªßa b·∫°n kh√¥ng h·ªó tr·ª£ setclipboard")
    end

    -- Load script Star Orbit
    loadstring(game:HttpGet(scriptUrl))()

    -- ƒê√≥ng UI m∆∞·ª£t
    CloseUI()
end)

-- üìå Khi b·∫•m Kh√¥ng
NoBtn.MouseButton1Click:Connect(function()
    print("‚ùå B·∫°n ƒë√£ ch·ªçn KH√îNG kh·ªüi ƒë·ªông.")
    CloseUI()
end)
